{
  "name": "claude-api-integrations",
  "version": "1.0.0",
  "description": "Collection of Claude API integrations with daily updates and tracking",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "docs:generate": "jsdoc -c jsdoc.json -r src scripts -d docs",
    "security-scan": "npm audit && npm run test:coverage",
    "perf-check": "node scripts/performance-check.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.10.0",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "clean-jsdoc-theme": "^4.2.17"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    }
  }
}